/**
 * 1-bit memory register.
 * If load[t-1]=1 then out[t] = in[t-1]
 * else out does not change (out[t] = out[t-1])
 */

CHIP Bit {

    IN  in, load;
    OUT out;

    PARTS:
    
    Mux(a=muxin, b=in, out=muxout, sel=load);
    DFF(in=muxout, out=muxin, out=out);

}
